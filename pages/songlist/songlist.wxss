/* pages/songllist/songlist.wxss */

/* 榜单样式 */

.paihang-title{
  width: 100%;
  border-bottom: 1px #D82000 solid;
  font-size: 50rpx;
}

.paihang {
  width: 750rpx;
  height: 400rpx;
  margin-top: 10rpx;
  flex-direction: column;
}

.b{
  width: 100%;
  height: 200rpx;
  display: flex;
  border-bottom: 1px #D82000 solid;
}

.a{
  width: 375rpx;
  height: 200rpx;
}

.tupian{
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
}

.tupian image{
  width: 100%;
  height: 100%;
}

.name{
  position: relative;
  margin: 10rpx;
  font-size: 37rpx;
  width: 200rpx;
  height: 100rpx;
  left: 158rpx;
  top: -158rpx;
}

.gengxin{
  position: relative;
  margin: 10rpx;
  font-size: 35rpx;
  width: 200rpx;
  height: 100rpx;
  left: 158rpx;
  top: -158rpx;
  line-height: 55rpx;
}

.swiperContainer image {
  width: 100%;
  height: 100%;
}
/* 搜索框样式 */

.input-area {
  display: flex;
  margin-top: 10rpx;
  width: 98%;
  height: 100rpx;
  margin: 10rpx auto;
}

.input-left {
  display: flex;
  height: 100%;
  width: 80%;
  margin-right: 5rpx;
  border: 1px #D82000 solid;
  border-radius: 20rpx;
}

.input-left image {
  height: 70rpx;
  width: 70rpx;
  align-self: center;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
.input-left input{
  height: 100%;
  flex: 1;
  font-size: 35rpx;
}

.input-right {
  height: 105%;
  width: 20%;
  background-color: #D82000;
  text-align: center;
  line-height: 90rpx;
  color: white;
  font-size: 35rpx;
  border-radius: 10rpx;
}

/* 歌曲列表样式 */
.song-area{
  width: 100%;
  height: 140rpx;
  margin: 5rpx;
  display: flex;
}

.song-area-odd{
  width: 100%;
  height: 140rpx;
  margin: 5rpx;
  display: flex;
  background-color: rgb(245, 239, 239)
}

.albumpic{
  width: 120rpx;
  height: 120rpx;
  margin: auto 10rpx;
  border-radius: 10rpx;
}

.mvpic{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 10rpx;
  left: 430rpx;
}

.play-button{
  width: 100rpx;
  height: 100rpx;
  margin: auto 30rpx;
  border-radius:10rpx; 
}

.song-area-center{
  width: 60%;
  height: 100%;
  position: relative;
}

.song-area-center .title{
  font-size: 37rpx;
  width:95%;
  height: 60rpx;
  line-height: 70rpx;
  overflow: hidden;
}

.song-area-center .artists{
  height: 60rpx;
  width: 95%;
  line-height: 70rpx;
  font-size: 32rpx;
  overflow: hidden;
}

