/* pages/playsong/playsong.wxss */
.content{
  width: 100%;
  height: 100%;
  background: #222;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
}
/* 将封面设置为背景图片 */
.bg_pic{
  width: 100%;
  height: 100%;
  /* 不透明度 */
  opacity: 0.2;
}
/* 歌曲标题部分 */
.title{
  width: 100%;
  font-size: 40rpx;
  position: absolute;
  left: 0rpx;
  top: 80rpx;
  text-align: center;
  color: white;
}
/* 中间部分的样式 */
.middle{
  width: 100%;
  height: 750rpx;
  position: absolute;
  left: 0rpx;
  top: 170rpx;
}
/* 轮播的区域 */
.swiper-area{
  width: 100%;
  height: 100%;
}

.cd{
  width: 100%;
}
/* 中间专辑的动画效果 */
.cd-image{
  width: 600rpx;
  height: 600rpx;
  margin: 50rpx auto;
}

.cd-image image{
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  border: #222 solid 100rpx;
  animation: circle 10s linear infinite;
}
@keyframes circle{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}

/* 设置歌词滚动的样式 */
.lyric{
  width: 80%;
  height: 100%;
  margin: 0 auto;
}
/* 每句歌词的样式 */
.lyric text{
  display: block;
  text-align: center;
  color: white;
  font-size: 34rpx;
  line-height: 30px;
}
/* 正在播放的歌词的样式 */
.lyric .currentLyric{
  color: #D82000;
}
/* 隐藏scroll-top的滚动条 */
::-webkit-scrollbar{
  width: 0rpx;
  height: 0rpx;
}
/* 进度条区域 */
.controls{
  width: 100%;
  height: 150rpx;
  background: #D82000;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}
/* 进度条区域所有图片样式 */
.controls image{
  width: 100rpx;
  height: 100rpx;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
/* 进度条样式 */
.progress{
  width: 100%;
  height: 100rpx;
  position: absolute;
  left: 0rpx;
  bottom: 150rpx;
  display: flex;
}

.start-time,.end-time{
  width: 15%;
  height: 100rpx;
  color: white;
  line-height: 100rpx;
  text-align: center;
}

.progress slider{
  width: 70%;
  height: 100rpx;
  margin-top: 30rpx;
}