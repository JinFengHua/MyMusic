/* pages/playmv/playmv.wxss */
.container{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0rpx;
  top: 0rpx;
}

.video-area{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 550rpx;

}

.video-area video{
  width: 100%;
  height: 550rpx;
}

.definition{
  position: absolute;
  width: 160rpx;
  height: 66rpx;
  right: 10rpx;
  margin-top: 10rpx;
}

.definition .button{
  position: absolute;
  width: 125rpx;
  height: 69rpx;
  top: -5rpx;
  right: 15rpx;
  line-height: 65rpx;
  border: 1px gray solid;
  border-radius: 50rpx;
  text-align: center;

}

.mv-title{
  width: 570rpx;
  height: auto;
  margin: 10rpx 10rpx;
}

.mv-data{
  height: 120rpx;
  width: 100%;
  margin-top: 24rpx;
  line-height: 55rpx;
  color: rgb(179, 165, 165);
  font-size: 35rpx;
}

.mv-title .mv-name{
  width: 100%;
  font-size: 45rpx;
  font-weight: 700;
  color: rgb(65, 63, 63)
}

.mv-body{
  margin-top: 20rpx;
  border-top: 1px gray solid;
  width: 100%;
  height: auto;
  color: #333;
}

.mv-body .desc{
  margin: 10rpx 20rpx;
}

.tool{
 height: 80rpx;
 text-align: center;
 line-height: 64rpx;
 margin-top: 50rpx;
}

.tool-item{
  width: 180rpx;
 display: inline-block;
 vertical-align: top;
 color: #333;
 font-size: 35rpx;
}
.tool-item image{
 height: 50rpx;
 width:50rpx;
 vertical-align: -3px;
 margin-right: 10rpx;
}

.song-title{
  height: 60rpx;
  width: 100%;
  margin-left: 10rpx;
  font-weight: 700;
  color: rgb(65, 63, 63); 
}

@import "../songlist/songlist.wxss"