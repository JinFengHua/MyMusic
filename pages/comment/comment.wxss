.comment-title{
  height: 90rpx;
  font-size: 40rpx;
  margin-left: 10rpx;
  color: black;
  line-height: 90rpx;
}

.title{
  width: 100%;
  height: auto;
  margin-top: 20rpx; 
}

.title .txt{
  width: 100%;
  height: 65rpx;
  margin-left: 20rpx;
  border-bottom: solid 1px gray;
}

.comment-area{
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  width: 97%;
  height: auto;
  border-top: dashed 1px gray;  
}

.comment-head{
  display: flex;
  height: 125rpx;
}

.comment-area .avatar{
  width: 100rpx;
  height: 100rpx;  
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.avatar image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.comment-area .center{
  width: 65%;
  height: 100rpx;
  margin-top: 10rpx; 
}

.center .username{
  font-size: 37rpx;
  height: 60rpx;
  width: auto;
}

.center .create-time{
  color: rgb(136, 132, 132);
  font-size: 33rpx;
}

.comment-area .zan{
  width: 140rpx;
  height: 100rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  text-align: center;
  color: rgb(136, 132, 132);
  font-size: 33rpx;
}

.zan image{
  height: 60rpx;
  width: 60rpx;
  margin-left: 20rpx;
}

.comment-body{
  width: 85%;
  height: auto;
  font-size: 34rpx;
  line-height: 50rpx;
  color: rgb(117, 113, 113);
  margin:20rpx 20rpx 20rpx 100rpx;
}

